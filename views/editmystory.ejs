<!DOCTYPE html>
<html>
  <head>
<% include ./partials/head %>
  </head>
  <body>
    <div class="container" style="margin-top:30px">
      <div class="jumbotron">

        <form action="/user/<%- story.user_id %>/edit/mystory/<%- story.id %>" method="post">
          <div class="form-group">
            <label>Title</label>
            <input type="text" value ="<%- story.title %>" class="form-control" name=title>
          </div>
          <div class="form-group">
            <label>Premise</label>
            <input type="text" value ="<%- story.premise %>" class="form-control" name=premise>
          </div>
          <div class="form-group">
            <label>Note</label>
            <input type="text" value ="<%- story.question %>" class="form-control" name=question>
          </div>      
          <div class="form-group">
            <label>MyStory</label>
            <textarea class="form-control" name="story" rows="10" value ="<%- story.story %>"><%- story.story %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </body>
</html>